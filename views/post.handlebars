{{> header}}
<main>
  <article>
    <h2>{{post.title}}</h2>
    <p>By {{post.user.username}} on {{post.createdAt}}</p>
    <p>{{post.content}}</p>
  </article>
  {{#if loggedIn}}
    <form id="comment-form">
      <textarea id="comment-text" name="comment"></textarea>
      <button type="submit">Submit Comment</button>
    </form>
  {{/if}}
  {{#each post.comments}}
    <div>
      <p>{{this.comment}}</p>
      <p>By {{this.user.username}} on {{this.createdAt}}</p>
    </div>
  {{/each}}
</main>